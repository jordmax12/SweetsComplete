@using PagedList.Mvc;
@using PagedList;
@model IPagedList<SweetsCompleteApp.product>
@{
    ViewBag.Title = "Home Page";
    
}

<div class="jumbotron">
    <h1>Welcome to Sweets Complete</h1>
    
</div>

<div class="container" style="width: 100%;">

    <ul style="list-style-type: none; width: 70%; margin-left: auto; margin-right: auto; float: left; ">
        <div class="container" style="margin-left: auto; margin-right: auto; float: none; ">
            <div class="container" style="margin-left: auto; margin-right: auto; float: none; ">
                <h3> Some Specials </h3>
                <br />
            </div>

            @foreach (var item in Model)
            {
                <li style="display: inline-block;">
                    <div class="container">
                        <a href="@Url.Action("Details", "Products", new { prodID = item.product_id })"><img src="~/Content/Images_fixed/@(item.link).scale_20.jpg" width=" 190" height="130" /></a>
                        <p>
                            @Html.DisplayFor(modelItem => item.title)
                            <br />
                            @Html.DisplayFor(modelItem => item.price)
                            <br />
                            <a href="@Url.Action("TestSession", "Products", new { prodID = item.product_id })" class="AddLink"><button class="btn btn-default"> Add to Cart </button></a>
                        </p>
                    </div>
                </li>
            }
        </div>
    </ul>
    <div stlye="width: 30%; margin-left: auto; margin-right: auto; float: right;">
        <h3 style="text-align: center;"> About Us </h3>
        <p>Sweets Complete is a complete e-commerce web-app built on ASP .NET and the object relational mapping is Entity Frameworks. MSQL/Linq is handling the database queries, while a combination of cookies/sessions are used to implement sign up/sign in/shopping cart functionality. This is not a real store and real items can not be purchased. Project can be found on github: https://github.com/jordmax12/SweetsCompleteASP and was developed by: www.jdmdev.net. </p>
    </div>
</div>