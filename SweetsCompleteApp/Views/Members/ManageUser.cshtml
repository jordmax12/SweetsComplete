@using PagedList.Mvc;
@using PagedList;

@model IPagedList<SweetsCompleteApp.ViewModel.ManageFPViewModel>

@{
    ViewBag.Title = "ManageUser";
}

@if (Request.Cookies["user"] != null)
{
    <h2>Manage User</h2>
}

<div class="container">
    <div class="container" style="width: 30%; margin-left: auto; margin-right: auto; float: left;">
        <h2> Your Profile </h2>

                <label class="cold-md-2 control-label"> Name: @Html.DisplayFor(modelItem => Model.First().member.name) </label>
                <br />
                <label class="cold-md-2 control-label"> Address: @Html.DisplayFor(modelItem => Model.First().member.address)</label>
                <br />
                <label class="cold-md-2 control-label"> City: @Html.DisplayFor(modelItem => Model.First().member.city)</label>
                <br />
                <label class="cold-md-2 control-label"> State: @Html.DisplayFor(modelItem => Model.First().member.state_province)</label>
                <br />
                <label class="cold-md-2 control-label"> Country: @Html.DisplayFor(modelItem => Model.First().member.country)</label>
                <br />
                <label class="cold-md-2 control-label"> Phone Number: @Html.DisplayFor(modelItem => Model.First().member.phone)</label>
                <br />
                <label class="cold-md-2 control-label"> Email Address: @Html.DisplayFor(modelItem => Model.First().member.email)</label>
                <br />
                <label class="cold-md-2 control-label"> Password: @Html.DisplayFor(modelItem => Model.First().member.password)</label>


        @if (Request.Cookies["user"] != null)
        {
            <br />
            <br />
            @Html.ActionLink("Edit Profile", "EditUser")
        }
    </div>
    <div class="container" style="width: 30%; margin-left: auto; margin-right: auto; float: right;">
        <h2> Recent Orders </h2>
               @foreach (var item in Model)
               {
                <tr>
                    <td class="col-sm-8 col-md-6">
                        <div class="media">
                            <a class="thumbnail pull-left" href="#"> <img class="media-object" src="~/Content/Images_fixed/@(item.product.link).scale_20.jpg" style="width: 72px; height: 72px;"> </a>
                            <div class="media-body">
                                <h4 class="media-heading"><a href="#">@Html.DisplayFor(modelItem => item.product.title)</a></h4>
                            </div>
                        </div>
                    </td>
                </tr>
                }
                    @Html.PagedListPager(Model, page => Url.Action("ManageUser", new { page }))
</div>
</div>

