@using PagedList.Mvc;
@using PagedList;
@model IPagedList<SweetsCompleteApp.product>
@{
    ViewBag.Title = "Home Page";
    
}

<div class="jumbotron">
    <h1>Welcome to Sweets Complete</h1>
    
</div>

<div class="container" style="width: 100%;">

    <ul style="list-style-type: none; width: 70%; margin-left: auto; margin-right: auto; float: left; ">
        <div class="container" style="margin-left: auto; margin-right: auto; float: none; ">
            <div class="container" style="margin-left: auto; margin-right: auto; float: none; ">
                <h3> Some Specials </h3>
                <br />
            </div>

            @foreach (var item in Model)
            {
                <li style="display: inline-block;">
                    <div class="container">
                        <a href="@Url.Action("Details", "Products", new { prodID = item.product_id })"><img src="~/Content/Images_fixed/@(item.link).scale_20.jpg" width=" 190" height="130" /></a>
                        <p>
                            @Html.DisplayFor(modelItem => item.title)
                            <br />
                            @Html.DisplayFor(modelItem => item.price)
                            <br />
                            <a href="@Url.Action("TestSession", "Products", new { prodID = item.product_id })" class="AddLink"><button class="btn btn-default"> Add to Cart </button></a>
                        </p>
                    </div>
                </li>
            }
        </div>
    </ul>
    <div stlye="width: 30%; margin-left: auto; margin-right: auto; float: right;">
        <h2 style="text-align: center;"> About Us </h2>
