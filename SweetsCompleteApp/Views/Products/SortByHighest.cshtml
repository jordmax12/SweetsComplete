@using PagedList.Mvc;
@using PagedList;
@model IPagedList<SweetsCompleteApp.product>

@{
    ViewBag.Title = "Products";

}

<style>
    .container {
        text-align: center;
    }

    .radio {
        margin: 0 auto;
        float: left;
        clear: none;
    }
</style>
<h2 class="text-center">Our Products</h2>
<br />
<input type="text" class="span2 search-query capitalizedText" id="que" name="query">
<button type="submit" class="btn">Search</button>
<br />
<form role="form">
    <ul style="list-style-type: none;">
        <li style="display: inline-block;">
            <div class="radio col-sm-3">
                <h4>By Price</h4>
                <div class="btn-group">
                    <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("SortByLower", "Products")"></i>Low</a></li>
                        <li class="divider"></li>
                        <li><a href="@Url.Action("SortByHighest", "Products")"><i class=" icon-trash"></i>High</a></li>
                        <li class="divider"></li>
                        <li><a href="@Url.Action("SortBySpecial", "Products")"><i class="icon-ban-circle"></i>Special</a></li>
                    </ul>
                </div>
            </div>
        </li>
        <li style="display: inline-block;">
            <div class="radio col-sm-3">
                <h4>By Popularity</h4>
                <div class="btn-group">
                    <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("SortByMost", "Products")"><i class="icon-pencil"></i>Most</a></li>
                        <li class="divider"></li>
                        <li><a href="@Url.Action("SortByLeast", "Products")"><i class="icon-trash"></i>Least</a></li>
                    </ul>
                </div>
            </div>
        </li>
    </ul>
</form>

<div class="container" style="width: 100%;">
    <ul style="list-style-type: none; width: 70%; margin-left: auto; margin-right: auto; float: none; ">
        <div class="container" style="margin-left: auto; margin-right: auto; float: none; ">
            @foreach (var item in Model)
            {
                <li style="display: inline-block;">
                    <div class="container">
                        <a href="@Url.Action("Details", "Products", new { prodID = item.product_id })"><img src="~/Content/Images_fixed/@(item.link).scale_20.jpg" width=" 190" height="130" /></a>
                        <p>
                            @Html.DisplayFor(modelItem => item.title)
                            <br />
                            @Html.DisplayFor(modelItem => item.price)
                            <br />
                            <button class="btn btn-default"> Add to Cart </button>

                        </p>
                    </div>
                </li>
            }
        </div>
    </ul>
</div>


@Html.PagedListPager(Model, page => Url.Action("SortByHighest", new { page }))



